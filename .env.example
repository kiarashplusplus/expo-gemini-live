# Copy this file to `.env` and fill in the secrets/URLs as needed for your environment.

# Expo / mobile client (base URL the Expo app uses to reach the FastAPI backend)
EXPO_PUBLIC_API_BASE_URL=http://localhost:8000

# FastAPI defaults
# Prefix for all API routes that the Expo app calls.
API_PREFIX=/api
# Include every origin that will call the API (add the Expo dev server ports when testing locally).
ALLOW_ORIGINS=["http://localhost:8081","http://localhost:19006"]
# Server log verbosity: DEBUG | INFO | WARNING | ERROR.
LOG_LEVEL=INFO

# Daily credentials
# Provide your Daily developer key (https://dashboard.daily.co/developers). Leave blank and set MOCK_DAILY=true for offline tests.
DAILY_API_KEY=
DAILY_API_URL=https://api.daily.co/v1
# Optional: permanent Daily room URL to reuse, otherwise leave blank to auto-create.
DAILY_SAMPLE_ROOM_URL=
# How long newly created rooms stay active (minutes).
DAILY_ROOM_EXP_MINUTES=2
# Lifetime (minutes) for generated Daily access tokens.
DAILY_TOKEN_EXP_MINUTES=2
# Set to true to stub out Daily network calls during local development.
MOCK_DAILY=true

# Google Gemini Live configuration
# API key with access to Gemini Live streaming endpoints.
GOOGLE_API_KEY=
GOOGLE_MODEL=models/gemini-2.0-flash-live-001
GOOGLE_VOICE_ID=Puck
GOOGLE_LANGUAGE=en-US
# Region helps route requests; e.g., "United States" for US deployments.
GOOGLE_REGION="United States"
# Optional overrides for advanced scenarios.
GOOGLE_API_VERSION=
GOOGLE_MODALITIES=AUDIO
SYSTEM_INSTRUCTION="You are a helpful voice concierge for Pipecat demos. Keep responses short, upbeat, and free of emojis."

# Bot + session lifecycle
# Friendly name announced to participants.
BOT_NAME=Pipecat Gemini Live
# Enables the async bot runner component.
BOT_RUNNER_ENABLED=true
# Turn on if you're testing the video pipeline end-to-end.
ENABLE_VIDEO_PIPELINE=false
# How long sessions stay active before cleanup (seconds).
SESSION_TTL_SECONDS=900
# Frequency (seconds) to sweep and close expired sessions.
CLEANUP_INTERVAL_SECONDS=60

# Feature flags
# Enable if you need placeholder auth tokens during development.
DUMMY_TOKENS_ENABLED=false
